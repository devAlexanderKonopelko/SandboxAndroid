<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.konopelko.sandboxandroid.presentation.viewmodel.details.DetailsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/detailAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:minHeight="@dimen/size_150"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:statusBarScrim="@color/transparent">

                <ImageView
                    android:id="@+id/articleDetailsImage"
                    imageUrl="@{viewModel.article.urlToImage}"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_250"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="@dimen/size_50"
                        android:layout_height="@dimen/size_50"
                        android:layout_marginStart="@dimen/spacing_s"
                        android:layout_marginTop="@dimen/spacing_l"
                        app:layout_collapseMode="pin"
                        android:background="@drawable/shape_circle_purple"
                        android:onClick="@{() -> viewModel.onBackClicked()}"
                        app:icon="@drawable/ic_arrow_back"
                        app:iconGravity="textStart"
                        app:iconPadding="@dimen/spacing_zero" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/spacing_m"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detailsContentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/articleItemHeadline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_m"
                    android:layout_marginEnd="@dimen/spacing_s"
                    android:fontFamily="sans-serif-black"
                    android:text="@{viewModel.article.title}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_m4"
                    app:layout_constraintEnd_toStartOf="@+id/articleDetailsBookmarkBtn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Lorem Lorem Lorem Lorem Lorem" />

                <ImageView
                    android:id="@+id/articleDetailsBookmarkBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_m"
                    android:src="@drawable/ic_bookmark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/articleItemHeadline" />

                <TextView
                    android:id="@+id/articleDetailsAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_s"
                    android:text="@{viewModel.article.author}"
                    app:layout_constraintStart_toStartOf="@+id/articleItemHeadline"
                    app:layout_constraintTop_toBottomOf="@+id/articleItemHeadline"
                    tools:text="Alexander Konopelko" />

                <TextView
                    android:id="@+id/articleDetailsDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_s"
                    android:text="@{viewModel.article.publishedAt}"
                    app:layout_constraintStart_toEndOf="@+id/articleDetailsAuthor"
                    app:layout_constraintTop_toTopOf="@+id/articleDetailsAuthor"
                    tools:text="01.02.2003" />

                <TextView
                    android:id="@+id/articleDetailsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_m"
                    android:layout_marginTop="@dimen/spacing_m"
                    android:layout_marginEnd="@dimen/spacing_m"
                    android:text="@{viewModel.article.content}"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/articleDetailsAuthor"
                    tools:text="ArticleItem articleItem articleItem articleItem articleItem articleItemarticleItemarticleItemarticleItemarticleItemarticleItemarticleItem" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/articleDetailsReadBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_m"
                    android:onClick="@{() -> viewModel.onArticleClicked()}"
                    android:text="@string/read_article"
                    app:icon="@drawable/ic_arrow_right"
                    app:iconGravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/articleDetailsText" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
